        public void RestoreState()
        {
            ObjectIndexSelect.Value = MyBUS_PluginParametersState.SelectedIndex ;

            AutoQueryConfigCB.Checked =   MyBUS_PluginParametersState.AutoQueryConfig;
            AutoQueryStateCB.Checked = MyBUS_PluginParametersState.AutoQueryState;
        }


        public void UpdateConfigTextBox()
        {
            string T = "";

           
            for (int i = 0; i < Bus_Configuration.Length; i++)
            {
                if (Bus_Configuration[i] != null)
                {
                    string temp = Bus_Configuration[i].Description.Replace('\0', ' ');

                    T = T + temp + " > " + " EnergySources :";
                    
                    byte [] ESAs = (byte [])Bus_Configuration[i].EnergySources.ToArray(typeof(byte));

                    if(ESAs!=null)
                    {
                        for(int j=0;j<ESAs.Length;j++)
                        {
                            T = T + "0x" + ESAs[j].ToString("X2") + " ";
                        }

                    }
                    
                    T = T + "\r\n";
                }
            }

            BusConfigurationTextBox.Text = T;
        }


        public void UpdateStateTextBox()
        {
            string T = "";
           
            for (int i = 0; i < Bus_State.Length; i++)
            {

                if (Bus_State[i] != null)
                {
                    string Description = "BUS" + i;

                    if(Bus_Configuration[i]!= null)
                        Description =  Bus_Configuration[i].Description.Replace('\0', ' ');

                    T = T + Description + " > " + Bus_State[i].Voltage.ToString("00.00") + "Volts  "
                         + Bus_State[i].Current.ToString("00.00") + "Amps " + "\r\n"; ;

                 
                }
            }
      
            BusStateTextBox.Text = T;
        }


